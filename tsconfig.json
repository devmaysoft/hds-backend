{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "typeRoots": ["./src/models/*/**.d.ts", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["src/components/*"],
      "@Components": ["src/components"],
      "@Config": ["src/config"],
      "@Config/*": ["src/config/*"],
      "@Lib": ["lib"],
      "@Lib/*": ["lib/*"],
      "@Pages/*": ["pages/*"],
      "@Store": ["src/store"],
      "@Store/*": ["src/store/*"],
      "@Services": ["src/services"],
      "@Services/*": ["src/services/*"],
      "@Static/*": ["public/static/*"],
      "@Types": ["src/models"],
      "@Types/*": ["src/models/*"],
      "@Utils": ["src/utils"],
      "@Utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
